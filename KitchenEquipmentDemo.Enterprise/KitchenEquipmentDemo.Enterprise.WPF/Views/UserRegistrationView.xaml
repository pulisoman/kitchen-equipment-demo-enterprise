<UserControl x:Class="KitchenEquipmentDemo.Enterprise.WPF.Views.UserRegistrationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:KitchenEquipmentDemo.Enterprise.WPF.ViewModels"
             xmlns:h="clr-namespace:KitchenEquipmentDemo.Enterprise.WPF.Helpers"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance vm:UserRegistrationViewModel}">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid Background="{StaticResource Brush.White}">
        <Border Background="{StaticResource Brush.White}"
                BorderBrush="{StaticResource Brush.Accent}"
                BorderThickness="1"
                CornerRadius="12"
                Padding="24"
                Width="420"
                MaxHeight="620"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect BlurRadius="16" ShadowDepth="2" Opacity="0.25"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Logo & title -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
                    <Image Source="/Assets/logo.png" Height="56" Margin="0,0,12,0"/>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Duke Kitchen Equipment" 
                                   FontSize="18" FontWeight="SemiBold"
                                   Foreground="{StaticResource Brush.Text}"/>
                        <TextBlock Text="Sign up to have Adminb Access"
                                   Foreground="{StaticResource Brush.Text}"
                                   Opacity="0.8"/>
                    </StackPanel>
                </StackPanel>

                <!-- Scrollable content -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="0,0,10,0">
                    <StackPanel>
                        <!-- Personal Information Section -->
                        <TextBlock Text="User Information" 
                                   FontSize="18" 
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,15"
                                   Foreground="{StaticResource Brush.Deep}"/>

                        <!-- First Name -->
                        <StackPanel>
                            <TextBlock Text="First Name:" 
                                       Margin="0,0,0,5"
                                       FontWeight="SemiBold"/>
                            <TextBox Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}"
                                     Margin="0,0,0,15"
                                     Height="35"/>
                        </StackPanel>

                        <!-- Last Name -->
                        <StackPanel>
                            <TextBlock Text="Last Name:" 
                                       Margin="0,0,0,5"
                                       FontWeight="SemiBold"/>
                            <TextBox Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}"
                                     Margin="0,0,0,15"
                                     Height="35"/>
                        </StackPanel>

                        <!-- Email -->
                        <TextBlock Text="Email Address:" 
                                   Margin="0,0,0,5"
                                   FontWeight="SemiBold"/>
                        <TextBox Text="{Binding EmailAddress, UpdateSourceTrigger=PropertyChanged}"
                                 Margin="0,0,0,15"
                                 Height="35"/>

                        <!-- Username -->
                        <TextBlock Text="Username:" 
                                   Margin="0,0,0,5"
                                   FontWeight="SemiBold"/>
                        <TextBox Text="{Binding UserName, UpdateSourceTrigger=PropertyChanged}"
                                 Margin="0,0,0,15"
                                 Height="35"/>

                        <!-- Account Security Section -->
                        <TextBlock Text="Account Security" 
                                   FontSize="18" 
                                   FontWeight="SemiBold"
                                   Margin="0,20,0,15"
                                   Foreground="{StaticResource Brush.Deep}"/>

                        <!-- Password -->
                        <TextBlock Text="Password:" 
                                   Margin="0,0,0,5"
                                   FontWeight="SemiBold"/>
                        <PasswordBox h:PasswordBoxHelper.BindPassword="True"
                                     h:PasswordBoxHelper.BoundPassword="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     Margin="0,0,0,15"
                                     Height="35"/>

                        <!-- Confirm Password -->
                        <TextBlock Text="Confirm Password:" 
                                   Margin="0,0,0,5"
                                   FontWeight="SemiBold"/>
                        <PasswordBox h:PasswordBoxHelper.BindPassword="True"
                                     h:PasswordBoxHelper.BoundPassword="{Binding ConfirmPassword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     Margin="0,0,0,15"
                                     Height="35"/>
                        
                    </StackPanel>
                </ScrollViewer>

                <!-- Actions -->
                <DockPanel Grid.Row="2" Margin="0,16,0,0" LastChildFill="False">
                    <!-- SignUp on left -->
                    <Button Content="Cancel"
                            Command="{Binding CancelCommand}"
                            Style="{StaticResource BtnAccent}"
                            Width="120"
                            DockPanel.Dock="Left"/>

                    <!-- Login on right -->
                    <Button Content="Sign Up"
                            Command="{Binding SignUpCommand}"
                            Style="{StaticResource BtnAccent}"
                            Width="120"
                            DockPanel.Dock="Right"
                            IsDefault="True"/>
                </DockPanel>

                <!-- Message -->
                <TextBlock Grid.Row="3" 
                           Text="{Binding Message}"
                           Foreground="Tomato"
                           Margin="0,10,0,0"/>

                <!-- Hint -->
                <TextBlock Grid.Row="4" 
                           Margin="0,8,0,0" 
                           Foreground="{StaticResource Brush.Text}" 
                           Opacity="0.8">
                </TextBlock>
            </Grid>
        </Border>
    </Grid>
</UserControl>