<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

  <!-- Global typography -->
  <FontFamily x:Key="App.FontFamily">Segoe UI</FontFamily>
  <sys:Double x:Key="App.FontSize">15</sys:Double>
  <sys:Double x:Key="App.FontSize.Small">16</sys:Double>
  <sys:Double x:Key="App.FontSize.Large">18</sys:Double>

  <!-- Apply to all controls -->
  <Style TargetType="{x:Type Control}">
    <Setter Property="FontFamily" Value="{StaticResource App.FontFamily}"/>
    <Setter Property="FontSize"   Value="{StaticResource App.FontSize}"/>
    <Setter Property="Foreground" Value="{StaticResource Brush.Text}"/>
  </Style>

  <!-- TextBlock (not a Control) -->
  <Style TargetType="{x:Type TextBlock}">
    <Setter Property="FontFamily" Value="{StaticResource App.FontFamily}"/>
    <Setter Property="FontSize"   Value="{StaticResource App.FontSize}"/>
    <Setter Property="Foreground" Value="{StaticResource Brush.Text}"/>
    <Setter Property="TextWrapping" Value="Wrap"/>
  </Style>

  <!-- Label -->
  <Style TargetType="{x:Type Label}">
    <Setter Property="FontFamily" Value="{StaticResource App.FontFamily}"/>
    <Setter Property="FontSize"   Value="{StaticResource App.FontSize}"/>
    <Setter Property="Foreground" Value="{StaticResource Brush.Text}"/>
    <Setter Property="Padding"    Value="0"/>
    <Setter Property="Margin"     Value="0,0,0,6"/>
  </Style>
</ResourceDictionary>
