<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Brand palette -->
    <Color x:Key="Brand.Primary">#FF004C99</Color>
    <Color x:Key="Brand.Deep">#FF003470</Color>
    <Color x:Key="Brand.Accent">#FF004C99</Color>
    <Color x:Key="Brand.Surface">#FFF0F3F7</Color>
    <Color x:Key="Brand.Text">#FF263238</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="Brush.Primary" Color="{StaticResource Brand.Primary}" />
    <SolidColorBrush x:Key="Brush.Deep"    Color="{StaticResource Brand.Deep}" />
    <SolidColorBrush x:Key="Brush.Accent"  Color="{StaticResource Brand.Accent}" />
    <SolidColorBrush x:Key="Brush.Surface" Color="{StaticResource Brand.Surface}" />
    <SolidColorBrush x:Key="Brush.Text"    Color="{StaticResource Brand.Text}" />
    <SolidColorBrush x:Key="Brush.Border"    Color="{StaticResource Brand.Deep}" />
    <SolidColorBrush x:Key="Brush.White"   Color="#FFFFFFFF" />
</ResourceDictionary>
